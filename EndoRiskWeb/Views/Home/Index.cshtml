@model IEnumerable<EndoRiskWeb.Models.endoquestion> 

@{
    ViewBag.Title = "Endometriosis Risk Calculator";
}
@section featured {
    <section class="featured">
    <div class="content-wrapper">
        <hgroup class="title">
            <h1>@ViewBag.Title.</h1>
        </hgroup>
        <ol class="round">
            <li class="one">
                <h2>@Html.ActionLink("Risk Calculator", "", "Home")</h2>
            </li>
        </ol>
    </div>
</section>
}

 @using (Html.BeginForm("Result", "Home", FormMethod.Post))
       {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
         <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


       
        <div class="form-group">
        @foreach (var item in Model)
        {
                <p>@Html.DisplayFor(model => item.endoQuestion1)</p>
    
                <div class="col-md-10">
                    <input type="text" name="@item.abbr" placeholder="@item.choiceSet" />
                    <!--@Html.EditorFor(model => item.idQuestion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => item.idQuestion, "", new { @class = "text-danger" })-->
                </div>
        }
            </div>

         <div class="form-group">
               <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Result" class="btn btn-default" />
                </div>
        </div>
       </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
       


