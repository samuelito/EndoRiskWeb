@model EndoRiskWeb.Models.endochoice

@{
    ViewBag.Title = "Edit";
}

<h2 class="center">Editar Opcion</h2>
<br />
<div class="detailWrap">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idChoice)

            <div class="form-group">
                @Html.LabelFor(model => model.choiceSet, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.choiceSet, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.choiceSet, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.choiceOption, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.choiceOption, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.choiceOption, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="center">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar Cambio" class="btn btn-default" />
                    </div>
                </div>
            </div>
            <br />
            <div class="center">
                @Html.ActionLink("Volver a la lista de Sets", "Index", "endochoices")
            </div>
        </div>
    }
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
