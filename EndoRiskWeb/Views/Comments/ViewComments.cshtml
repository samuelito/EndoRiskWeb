@model IEnumerable<EndoRiskWeb.Models.comment>

@{
    ViewBag.Title = "Comentarios - Feedback";
}

<h2 class="center">@ViewBag.Title</h2>
<br />
<div class="purpleWrap">
    <table class="tableC">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.title)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.content)

            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.content)
                    
                </td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.idComment }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.idComment })
                </td>
            </tr>
        }

    </table>
</div>