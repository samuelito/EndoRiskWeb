@model EndoRiskWeb.Models.LoginModel

@{
    ViewBag.Title = "Iniciar Sesión";
    ViewBag.Message = "Ingrese sus credenciales para iniciar sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

